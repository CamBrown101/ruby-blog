<h1>Home Page</h1>

  <% if Current.user %>
    Logged in as: <%= Current.user.username %>
    <%= button_to 'Edit Password', edit_password_path, method: :get %>
    <%= button_to 'Logout', logout_path, method: :delete %>
    <% else %>
    <%= link_to 'Sign Up', sign_up_path %>
    or
    <%= link_to 'Login', sign_in_path %>
  <% end %>