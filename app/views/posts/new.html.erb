<h1>New Posts</h1>
<% if @post.errors %>
  <ul>
    <% @post.errors.each do | error | %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>